<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="inf8405_tp2.tp2.MainActivity"
    android:weightSum="1">

    <TextView
        android:text="@string/tp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:textStyle="normal|bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="126dp"
        app:srcCompat="@mipmap/screen"
        android:id="@+id/imageView"
        android:contentDescription="@string/screenshot" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="text|textPersonName"
        android:hint="@string/enter_your_group_name"
        android:ems="10"
        android:id="@+id/et_groupname"
        android:layout_marginEnd="17dp"
        android:layout_weight="0.44" />

    <Button
        android:text="@string/start"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:onClick="OnClickGMap"
        android:id="@+id/btn_gmap" />

    <Button
        android:text="@string/change_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:onClick="OnClickUsername" />

    <Button
        android:text="@string/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:onClick="setting" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/picture"
        android:adjustViewBounds="true"
        android:contentDescription="@string/profile_picture" />


    <Button
        android:text="@string/dev_cheat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="OnClickGMapCheat"
        android:id="@+id/btn_cheat" />
</LinearLayout>
